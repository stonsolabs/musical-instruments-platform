# Debug Frontend Build Dockerfile
FROM node:18-alpine AS frontend

WORKDIR /app

# Copy entire frontend directory first
COPY frontend/ ./

# Install dependencies
RUN npm install

# Debug: Check what files we have
RUN ls -la src/lib/
RUN ls -la src/

# Set environment variables
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production

# Try building with original config first
RUN npm run build
